{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "globals": {
    "__DEV__": false
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "createClass": "createClass",
      "pragma": "React",
      "version": "15.4"
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "rules": {
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "no-console": "off",
    "no-unused-vars": ["warn", { "ignoreModules": true }],
    "no-case-declarations": "off",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}